generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Marque {
  id        Int         @id @default(autoincrement())
  nom       String      @unique
  evenements Evenement[]
}

model Evenement {
  id         Int      @id @default(autoincrement())
  marque     Marque   @relation(fields: [marqueId], references: [id])
  marqueId   Int
  description String
  date        DateTime
  categorie   String
  source      String
}
